<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_padding"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImGPlaylistStyle"
        tools:src="@drawable/plug_artwork_high" />

    <TextView
        android:id="@+id/namePlaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:paddingHorizontal="8dp"
        android:textColor="?attr/colorTitle"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/imgPlaylist"
        tools:text="Best songs 2021" />

    <TextView
        android:id="@+id/tracksCount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:paddingHorizontal="8dp"
        android:textColor="?attr/colorTitle"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/namePlaylist"
        tools:text="98 треков" />

</androidx.constraintlayout.widget.ConstraintLayout>


