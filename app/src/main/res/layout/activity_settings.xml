<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/default_padding"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:outlineProvider="none"
            app:icon="@drawable/back"
            app:iconTint="@color/main_buttons"/>

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@color/main_buttons"
            android:textSize="@dimen/primary_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/default_padding"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/settings_padding"
                android:layout_gravity="center|start"
                android:text="@string/theme"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                tools:ignore="UseSwitchCompatOrMaterialXml"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/settings_padding"
                android:paddingStart="0dp"
                android:paddingEnd="2dp"
                android:backgroundTint="@color/white"
                android:outlineProvider="none"
                android:text="@string/share"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                android:textAllCaps="false"
                android:letterSpacing="0"
                android:gravity="start"
                app:icon="@drawable/share"
                app:iconGravity="end"
                app:iconTint="@color/settings_icon"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/settings_padding"
                android:paddingHorizontal="0dp"
                android:backgroundTint="@color/white"
                android:outlineProvider="none"
                android:text="@string/support"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                android:textAllCaps="false"
                android:letterSpacing="0"
                android:gravity="start"
                app:icon="@drawable/support"
                app:iconGravity="end"
                app:iconTint="@color/settings_icon"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/settings_padding"
                android:paddingStart="0dp"
                android:paddingEnd="6dp"
                android:backgroundTint="@color/white"
                android:outlineProvider="none"
                android:text="@string/user_agreement"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_text_size"
                android:textAllCaps="false"
                android:letterSpacing="0"
                android:gravity="start"
                app:icon="@drawable/user_agreement"
                app:iconGravity="end"
                app:iconTint="@color/settings_icon"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>