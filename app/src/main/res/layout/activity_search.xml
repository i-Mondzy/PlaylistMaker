<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <LinearLayout
        style="@style/ToolBarLinearLayout">

        <Button
            android:id="@+id/btn_back"
            style="@style/BackButtonStyle"/>

        <TextView
            android:id="@+id/search"
            android:text="@string/search"
            style="@style/ToolBarTextView"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="@dimen/default_padding"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="13dp"
            android:paddingEnd="35dp"
            android:paddingVertical="11dp"
            android:background="@drawable/custom_search_field"
            android:drawableStart="@drawable/ic_search_edit_text"
            android:drawablePadding="8dp"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/dark"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textFontWeight="400"
            android:textSize="@dimen/default_text_size"
            android:textColorHint="?attr/colorIcon"
            android:drawableTint="?attr/colorIcon"/>

        <ImageView
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="7dp"
            android:paddingEnd="@dimen/default_padding"
            android:layout_gravity="center|end"
            android:visibility="gone"
            android:src="@drawable/ic_clear"/>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trackRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

</LinearLayout>

