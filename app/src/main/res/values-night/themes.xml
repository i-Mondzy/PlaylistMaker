<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Main.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/dark</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorTextPrimary">@color/dark</item>
        <item name="colorButton">@color/white</item>
    </style>

    <style name="Settings.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/dark</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorTextPrimary">@color/white</item>
        <item name="colorIcon">@color/white</item>
    </style>

    <style name="Search.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/dark</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorTitleReverse">@color/dark</item>
        <item name="colorEditText">@color/white</item>
        <item name="colorIcon">@color/dark</item>
        <item name="colorTextPrimary">@color/white</item>
        <item name="colorTextSecondary">@color/white</item>
        <item name="drawable_nothing_found">@drawable/plug_nothing_found_night</item>
        <item name="drawable_no_internet">@drawable/plug_something_wrong_night</item>
    </style>

    <style name="Player.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/dark</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorButton">@color/white</item>
        <item name="colorOtherButton">@color/white</item>
    </style>

    <style name="Media.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/dark</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorTitleReverse">@color/dark</item>
        <item name="drawable_nothing_found">@drawable/plug_nothing_found_night</item>
    </style>
</resources>
