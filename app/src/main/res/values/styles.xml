<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/default_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/colorButton</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconSize">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorTextPrimary</item>
    </style>

    <style name="SearchErrorTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorTitle</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SearchErrorLinearLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">86dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingVertical">@dimen/settings_button_padding</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:backgroundTint">?attr/colorBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">start</item>
        <item name="iconSize">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorIcon</item>
    </style>

    <style name="BackButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorBackground</item>
        <item name="iconTint">?attr/colorTitle</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="icon">@drawable/ic_back</item>
    </style>
    
    <style name="ToolBarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?attr/colorTitle</item>
    </style>

    <style name="ToolBarLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorBackground</item>
    </style>

</resources>