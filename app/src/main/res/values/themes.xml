<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Main.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/blue</item>
        <item name="colorTitle">@color/white</item>
        <item name="colorTextPrimary">@color/dark</item>
        <item name="colorButton">@color/white</item>
    </style>

    <style name="Settings.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/white</item>
        <item name="colorTitle">@color/dark</item>
        <item name="colorTextPrimary">@color/dark</item>
        <item name="colorIcon">@color/text_gray</item>
    </style>

    <style name="Search.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/white</item>
        <item name="colorTitle">@color/dark</item>
        <item name="colorTitleReverse">@color/white</item>
        <item name="colorEditText">@color/light_gray</item>
        <item name="colorIcon">@color/text_gray</item>
        <item name="colorTextPrimary">@color/black</item>
        <item name="colorTextSecondary">@color/text_gray</item>
        <item name="drawable_nothing_found">@drawable/plug_nothing_found_day</item>
        <item name="drawable_no_internet">@drawable/plug_something_wrong_day</item>
    </style>

    <style name="Player.Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorBackground">@color/white</item>
        <item name="colorTitle">@color/dark</item>
        <item name="colorButton">@color/dark</item>
        <item name="colorOtherButton">@color/dark</item>
    </style>
</resources>